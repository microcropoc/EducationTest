<Window x:Class="EducationTest.WindowMsgError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Шапка" Name="msgHeader" Background="Khaki">
            <Label Content="текст" Name="msgText" FontSize="14" HorizontalAlignment="Center"   VerticalAlignment="Center" />
        </GroupBox>
        <Button Grid.Row="1" Content="Закрать" Name="ExitMsg" Background="Azure"  Click="ExitMsg_Click"></Button>
    </Grid>
</Window>
